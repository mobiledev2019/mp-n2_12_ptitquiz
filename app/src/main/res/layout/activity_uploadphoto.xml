<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uploadphoto"
    android:background="@android:color/white">
    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/img_upload_icon"
        android:src="@drawable/downloading_icon"/>
    <TextView
        android:id="@+id/txt_upload_loading"
        android:layout_below="@id/img_upload_icon"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/profileAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Đang tải lên.... Chờ chút"/>
</RelativeLayout>