<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timelineGreen"
    tools:context=".PlayActivity">
    <ImageView
        android:layout_marginBottom="5dp"
        android:layout_above="@id/ll_end_info"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/Kiana"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/ll_end_info"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/cardBackgroundColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Môn học: Không biết"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/cardBackgroundColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã môn học: int001"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/cardBackgroundColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu trả lời đúng: 0 / 0"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/cardBackgroundColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian làm bài: 0s"/>
        <Button
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_without_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="Kết thúc"
            />
    </LinearLayout>
</RelativeLayout>