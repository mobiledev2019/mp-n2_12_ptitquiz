<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.SchedualFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="0dp"
        android:background="@color/startBlue"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:text="Nhiệm vụ"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_create_goal"
        android:layout_marginTop="-28dp"
        android:textSize="18dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/startBlue"
        android:background="@drawable/btn_circle_white"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/schedual_recyclerview"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>